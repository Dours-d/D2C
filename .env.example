# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=d2c_donations
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# WhatsApp Business API
# Option 1: SID and Secret Key (Twilio - Recommended)
WHATSAPP_API_URL=https://api.twilio.com/2010-04-01
WHATSAPP_ACCOUNT_SID=your_account_sid
WHATSAPP_AUTH_TOKEN=your_auth_token_secret
WHATSAPP_FROM_NUMBER=your_whatsapp_number
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Option 2: Access Token (Facebook/Meta - Legacy support)
# WHATSAPP_API_URL=https://graph.facebook.com/v18.0
# WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
# WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Stripe API (for exchange rates)
STRIPE_API_KEY=sk_test_your_stripe_api_key
STRIPE_API_URL=https://api.stripe.com/v1

# Simplex API
SIMPLEX_API_URL=https://sandbox.test-simplex.com
SIMPLEX_API_KEY=your_simplex_api_key
SIMPLEX_APP_ID=your_simplex_app_id

# TRON Blockchain Configuration
TRON_NETWORK=mainnet
TRON_PRIVATE_KEY=your_tron_private_key
TRON_FULL_NODE=https://api.trongrid.io
TRON_SOLIDITY_NODE=https://api.trongrid.io
TRON_EVENT_SERVER=https://api.trongrid.io
USDT_TRC20_CONTRACT=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

# Redis Configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Atomic Wallet Address (default destination)
ATOMIC_WALLET_ADDRESS=your_atomic_wallet_address

# Fee Configuration (can be overridden via system_config table)
DEFAULT_DEBT_FEE_PERCENT=10
DEFAULT_OPERATIONAL_FEE_PERCENT=10
DEFAULT_TRANSACTION_FEE_PERCENT=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
